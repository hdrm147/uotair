        "vue-credit-card": "^0.0.11",
        "vue-drag-select": "^0.2.0",
        "vue-interactive-paycard": "^1.0.0",
        "vue-panzoom": "^1.1.1",
        "vue-router": "^3.2.0",
        "vue-selectable": "^0.4.5"
    }
